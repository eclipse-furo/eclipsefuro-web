{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    "lib": ["es2019", "dom", "dom.iterable"],
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": ["dist", "test"],
  "include": ["src/**/*", "global.d.ts"]
}
