{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    // Generate d.ts files
    "declaration": true,
    // "rootDir": "src/",
    "module": "es2022",
    "jsx": "react-jsx",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": [
    "dist",
    "test",
  ],
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}
