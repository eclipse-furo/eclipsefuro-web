{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../.unit_tests",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    // Generate d.ts files
    "declaration": true,
    "module": "es2015",
    "lib": ["es2021", "dom", "dom.iterable"],
    "useDefineForClassFields": false,"plugins": [
      {
        "name": "typescript-lit-html-plugin"
      }
    ]
  },
  "exclude": [

  ],
  "include": ["./**/*.test.ts", "global.d.ts"]
}
